<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="200" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="17" 
        android:background="@drawable/actionbar">
        <ImageButton 
            android:id="@+id/hiScoreActBar"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/highscore"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="  Barrel Race"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

    <com.game.barrelrace.GameView
        android:id="@+id/myGameView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="144"
        />
    
       <TextView
           android:id="@+id/textView3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="29"
           android:background="@drawable/layoutbackplain"
           android:text=" " />
       
       <LinearLayout 
        android:id="@+id/above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:orientation="horizontal"
        android:background="@drawable/layoutbackgrad" >
        <!-- android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" 
        android:layout_below="@id/myGameView">  --> 
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text=" Start " 
        android:textSize="18sp" />
        
	<TextView
    	android:id="@+id/textView1"
    	android:layout_width="wrap_content"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
    	android:text="00:00:000"
    	android:textAppearance="?android:attr/textAppearanceLarge" />
	
	<Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Pause"  
        android:textSize="18sp"/>
    
    </LinearLayout>
    
       <!-- 
       <TextView
           android:id="@+id/textView4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="0"
           android:text=" " />  -->


</LinearLayout>